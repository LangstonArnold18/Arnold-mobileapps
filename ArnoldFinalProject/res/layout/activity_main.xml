<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arnoldfinalproject.MainActivity" >

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:hint="Miles"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView3"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:hint="Kilometers"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/editMiles"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/editKilo"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:ems="10" />

        <Button
            android:id="@+id/buttonConvert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert"
            android:onClick="buttonCoclicked" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView4"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:hint="Gallons"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView5"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:hint="Liters"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/editGallons"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:ems="10" />

        <EditText
            android:id="@+id/editLit"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:ems="10" />

        <Button
            android:id="@+id/buttonCon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert"
            android:onClick="buttonConclicked" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:hint="Inches"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView6"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:hint="Centimenters"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/editInches"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:ems="10" />

        <EditText
            android:id="@+id/editCent"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:ems="10" />

        <Button
            android:id="@+id/buttonConv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert"
            android:onClick="buttonConvclicked" />

    </TableRow>

</LinearLayout>
